@model IEnumerable<MVC2.Models.Instructor>

<h2>Instructors</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add Instructor</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Degree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
                <td>@instructor.Name</td>
                <td>@instructor.Address</td>
                <td>@instructor.Age</td>
                <td>@instructor.salary</td>
                <td>@instructor.Degree</td>
                <td>@instructor.Department?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@instructor.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@instructor.Id" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure you want to delete this instructor?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
